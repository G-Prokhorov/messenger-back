{
  "name": "back",
  "version": "1.0.0",
  "description": "messenger back-end",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/index.ts\"",
    "auth": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/authServ.ts\"",
    "message": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/messageServ.ts\"",
    "start debug": "nodemon --inspect=9229 dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "origin https://github.com/G-Prokhorov/messenger-back.git"
  },
  "author": "Gregory Prokhorov",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "redis": "^3.1.2",
    "sanitizer": "^0.1.3",
    "sequelize": "^6.6.2",
    "typescript": "^4.3.2",
    "ws": "^7.5.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/redis": "^2.8.29",
    "@types/sanitizer": "^0.0.28",
    "@types/sequelize": "^4.28.9",
    "@types/ws": "^7.4.5",
    "express": "^4.17.1",
    "nodemon": "^1.19.4"
  }
}
